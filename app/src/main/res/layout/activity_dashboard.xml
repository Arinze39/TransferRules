<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.arinze.transferrules.DashboardActivity">

    <View
        android:id="@+id/View"
        android:layout_width="0dp"
        android:layout_height="30dp"/>
    <FrameLayout
        android:id="@+id/Frame"
        android:layout_below="@+id/View"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ellipse"/>
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:paddingTop="2dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:src="@drawable/hand"/>
    </FrameLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:id="@+id/Text"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/Frame"
        android:text="Your Wallet"

        />
    <android.support.v7.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Text"
        android:id="@+id/rv"
        />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rv"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ff6200"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:id="@+id/SN"
                android:text="001"
                />
            <TextView
                android:layout_toEndOf="@+id/SN"
                android:gravity="end"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/currency"
                android:text="NGN"
                android:layout_alignParentEnd="true" />
            <View
                android:layout_below="@+id/currency"
                android:id="@+id/view2"
                android:layout_width="0dp"
                android:layout_height="30dp"/>
            <TextView
                android:layout_below="@+id/view2"
                android:layout_toEndOf="@+id/SN"
                android:gravity="center"
                android:textSize="40sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/wallet_name"
                android:text="Wallet Name"
                android:layout_alignParentEnd="true" />
            <View
                android:layout_below="@+id/wallet_name"
                android:id="@+id/view3"
                android:layout_width="0dp"
                android:layout_height="30dp"/>
            <TextView
                android:layout_below="@+id/view3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:id="@+id/Id"
                android:text="355627"
                />
            <TextView
                android:layout_below="@+id/view3"
                android:layout_toEndOf="@+id/Id"
                android:gravity="end"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/balance"
                android:text="1,663,754"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>
